//Vowels and consonants 
<?php

$ch='g';
switch($ch){
case 'a':
case 'e':
case 'i':
case 'o':
case 'u':
echo " the alphabet entered is vowel";
break;
default: 
echo " the alphabet entered is consonant";
}
?>

