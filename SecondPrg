// Day of the week
<?php

$day=5;

if($day ==1)
{
  echo "Monday";
}
elseif($day==2)
{
 echo "Tuesday";
}
elseif($day==3)
{
 echo "Wednesday";
}

elseif($day==4)
{
 echo "Thursday";
}

elseif($day==5)
{
 echo "Friday";
}
elseif($day==6)
{
 echo "Saturday";
}

elseif($day==7)
{
 echo "Sunday";
}
else
{
echo "Pls enter a number between 1 and 7";
}
?>
